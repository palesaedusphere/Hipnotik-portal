    <!-- Initial State -->
    <div id="welcome-screen">
        <div class="text-center">
            <h1 class="text-2xl sm:text-3xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-pink-600 mb-2">Hipnotik x EduSphere</h1>
