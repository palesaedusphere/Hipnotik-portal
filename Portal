        <div id="quiz-feedback" class="mt-4 text-center"></div>
        <div class="flex justify-between mt-6">
            <button id="prev-btn" onclick="prevQuestion()" class="btn bg-gray-600 text-white hidden">Previous</button>
            <button id="next-btn" onclick="nextQuestion()" class="btn bg-purple-500 text-white ml-auto">Next</button>
        </div>
    </div>

    <!-- Learning Tracks Screen -->
    <div id="tracks-screen" class="hidden">
        <h2 class="text-2xl font-bold mb-4">Choose Your Track</h2>
        <p class="text-sm text-gray-400 mb-6">Take a mini quiz to test your knowledge and see if it's the right fit!</p>
        <div id="track-list" class="space-y-4"></div>
    </div>

    <!-- Track Quiz Screen -->
    <div id="track-quiz-screen" class="hidden">
        <h2 id="track-quiz-title" class="text-2xl font-bold mb-4"></h2>
        <div id="track-quiz-intro" class="mb-6 text-gray-300"></div>
        <div id="track-quiz-questions"></div>
        <button onclick="submitTrackQuiz()" class="w-full btn bg-purple-500 text-white mt-6">Submit Quiz</button>
    </div>

    <!-- Results Screen -->
    <div id="results-screen" class="hidden text-center">
        <h2 class="text-2xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-pink-600 mb-4">ðŸŽ‰ Great work!</h2>
        <p id="results-text" class="text-lg font-medium mb-2">Based on your responses, hereâ€™s your path:</p>
        <div id="results-details" class="bg-gray-800 rounded-lg p-4 my-6"></div>
        <p class="text-sm mb-6">
            Ready to dive deeper? Get certified and unlock more AI resources to start your journey.
        </p>
        <button onclick="showLeadCapture()" class="w-full btn bg-purple-500 text-white">Claim your spot + Get Free EduSphere AI Resources</button>
    </div>

    <!-- Lead Capture Form -->
    <div id="lead-capture-screen" class="hidden">
        <h2 class="text-2xl font-bold mb-4 text-center">Sign up to continue your journey</h2>
        <p class="text-sm text-gray-400 mb-6 text-center">Get certified with EduSphere and access exclusive content.</p>
        <form id="contact-form" action="https://getform.io/f/bmdyykea" method="POST" class="space-y-4">
            <div class="relative">
                <input type="text" id="name" name="name" class="w-full p-3 bg-gray-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500" placeholder="Your Name" required>
            </div>
            <div class="relative">
                <input type="email" id="email" name="email" class="w-full p-3 bg-gray-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500" placeholder="Your Email" required>
            </div>
            <div class="relative">
                <input type="tel" id="whatsapp" name="whatsapp" class="w-full p-3 bg-gray-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500" placeholder="WhatsApp Number" required>
            </div>
            <input type="hidden" id="selected-track" name="learning_track">
            <input type="hidden" id="recommended-role" name="festival_role">
            <input type="hidden" id="quiz-score" name="quiz_score">
            <button type="submit" class="w-full btn bg-purple-500 text-white hover:bg-purple-600 mt-4">Sign Up</button>
        </form>
    </div>

    <!-- Modal for messages (replaces alert()) -->
    <div id="message-modal" class="fixed inset-0 bg-gray-900 bg-opacity-75 flex items-center justify-center hidden">
        <div class="bg-gray-800 rounded-lg p-6 max-w-sm mx-auto text-center shadow-lg">
            <p id="modal-text" class="text-white mb-4"></p>
            <button onclick="closeModal()" class="btn bg-purple-500 text-white">OK</button>
        </div>
    </div>

</div>

<script>
    const appContainer = document.getElementById('app-container');
    const welcomeScreen = document.getElementById('welcome-screen');
    const quizScreen = document.getElementById('quiz-screen');
    const tracksScreen = document.getElementById('tracks-screen');
    const trackQuizScreen = document.getElementById('track-quiz-screen');
    const resultsScreen = document.getElementById('results-screen');
    const leadCaptureScreen = document.getElementById('lead-capture-screen');
    const modal = document.getElementById('message-modal');

    // State
    let quizState = {
        currentQuestion: 0,
        answers: {},
        trackQuizScore: 0,
        selectedTrack: null,
        recommendedRole: null
    };

    const festivalQuiz = [
        {
            question: "You're at a festival. What's your first instinct?",
